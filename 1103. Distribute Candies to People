class Solution {
public:
    vector<int> distributeCandies(int candies, int num_people) {
        vector<int>ans(num_people,0);
        int i=0;
        int give=1;
        while(candies>0){
            int a=min(give,candies);
            ans[i] +=a;
            candies -=a;
            give++;
            i=(i+1)%num_people;
        }
        return ans;
    }
};
